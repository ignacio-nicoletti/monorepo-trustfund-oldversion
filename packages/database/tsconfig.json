{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist/",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "drizzle.config.ts",
    "src/adapter",
  ],
  "exclude": ["dist", "node_modules"]
}

